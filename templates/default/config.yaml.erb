---
essential_topics:
  <% @essential_topics.each do |topic| %>
  - <%= topic %>
  <% end %>

health_check_interval: 60
topic_check_interval: 60

listen_to:
  host: "0.0.0.0"
  port: <%= @listen_port %>

redis:
  host: '<%= @redis_host %>'
  port: <%= @redis_port %>

health_reporting:
  title: "Health Monitor"
  enabled: <%= @node.gilmour_health.health_reporting %>
  pager_duty_token: <%= @health_reporting_token %>

error_reporting:
  title: "Backend Traceback"
  enabled: <%= @node.gilmour_health.error_reporting %>
  pager_duty_token: <%= @error_reporting_token %>
